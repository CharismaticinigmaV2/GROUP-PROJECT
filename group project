#include <iostream>
#include <vector>
#include <algorithm>
#include <random>
#include <fstream>
#include <string>
#include <sstream>

// Define structures for Team and Fixture
struct Team {
    std::string name;
    std::string town;
    std::string stadium;
};

struct Fixture {
    Team homeTeam;
    Team awayTeam;
    int leg;
    int weekend;
};

// Function to read teams from a CSV file
std::vector<Team> readTeamsFromCSV(const std::string& filename) {
    std::vector<Team> teams;
    std::ifstream file(filename);
    if (!file.is_open()) {
        std::cerr << "Error opening file: " << filename << std::endl;
        return teams;
    }
